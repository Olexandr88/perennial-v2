{
  "name": "@equilibria/perennial-v2-account",
  "version": "1.1.0-rc1",
  "description": "Perennial V2 Collateral Account",
  "files": [
    "contracts/interfaces",
    "contracts/types",
    "artifacts/contracts/interfaces",
    "deployments/!(localhost)"
  ],
  "scripts": {
    "build": "yarn compile",
    "compile": "hardhat compile",
    "gasReport": "OPTIMIZER_ENABLED=true REPORT_GAS=true yarn test",
    "test": "hardhat test test/unit/*",
    "test:integration": "FORK_ENABLED=true FORK_NETWORK=arbitrum FORK_BLOCK_NUMBER=208460709 hardhat test test/integration/*",
    "coverage": "hardhat coverage --testfiles 'test/unit/*'",
    "coverage:integration": "FORK_ENABLED=true FORK_NETWORK=arbitrum FORK_BLOCK_NUMBER=208460709 hardhat coverage --testfiles 'test/integration/*'",
    "lint": "eslint --fix --ext '.ts,.js' ./ && solhint 'contracts/**/*.sol' --fix",
    "format": "prettier -w .",
    "clean": "rm -rf cache artifacts types/generated dist deployments/localhost",
    "prepack": "yarn clean && yarn build && find artifacts/contracts -name '*.dbg.json' -type f -delete"
  },
  "author": "",
  "license": "APACHE-2.0",
  "dependencies": {
    "@equilibria/perennial-v2": "1.1.0-rc1"
  }
}
